@model DentistApp.ViewModels.AppointmentViewModels.AppointmentCreateViewModel

@{
    ViewData["Title"] = "Create Appointment";
    ViewData["UsePaper"] = true;
}

<h2 class="mb-4">Create Appointment</h2>

<form asp-action="Create" method="post" novalidate>
    

    <!-- Validation summary -->
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <!-- Appointment date -->
    <div class="mb-3">
        <label asp-for="AppointmentDate" class="form-label"></label>
        <input asp-for="AppointmentDate"
               type="date"
               class="form-control"
               value="@DateTime.Today.ToString("yyyy-MM-dd")"
               min="@DateTime.Today.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
    </div>

    <!-- Appointment time -->
    <div class="mb-3">
        <label asp-for="AppointmentTime" class="form-label"></label>
        <input asp-for="AppointmentTime"
               type="time"

               class="form-control" 
               value="@DateTime.Now.ToString("HH:mm")" />
        <span asp-validation-for="AppointmentTime" class="text-danger"></span>
    </div>

    <!-- Manipulation type -->
    <div class="mb-3">
        <label asp-for="ManipulationTypeId" class="form-label"></label>
        <select asp-for="ManipulationTypeId"
                asp-items="Model.ManipulationTypes.Select(x => new SelectListItem
                {
                    Value = x.Id.ToString(),
                    Text = x.Name
                })"
                class="form-select">
            <option value="">-- Select manipulation --</option>
        </select>
        <span asp-validation-for="ManipulationTypeId" class="text-danger"></span>
    </div>

    <!-- Patient phone -->
    <div class="mb-3">
        <label asp-for="PatientPhoneNumber" class="form-label"></label>
        <input asp-for="PatientPhoneNumber"
               class="form-control"
               placeholder="+359XXXXXXXXX or 0XXXXXXXXX" />
        <span asp-validation-for="PatientPhoneNumber" class="text-danger"></span>
    </div>

    <!-- Note -->
    <div class="mb-3">
        <label asp-for="Note" class="form-label"></label>
        <textarea asp-for="Note"
                  class="form-control"
                  rows="3"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <!-- Submit -->
    <button type="submit" class="btn btn-primary">
        Create Appointment
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">
        Cancel
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
