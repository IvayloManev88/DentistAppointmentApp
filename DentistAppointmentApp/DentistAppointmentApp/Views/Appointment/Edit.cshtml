@using DentistApp.ViewModels.AppointmentViewModels
@model AppointmentCreateViewModel

@{
    ViewData["UsePaper"] = true;
}

<h2>Edit appointment</h2>

<form asp-action="Edit" method="post" class="mt-3">

    <!-- keep the id so the POST knows what to edit -->
    <input asp-for="AppointmentId" type="hidden" />

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="AppointmentDate" class="form-label"></label>
            <input asp-for="AppointmentDate" class="form-control" type="date" />
            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="AppointmentTime" class="form-label"></label>
            <!-- TimeSpan binds well from HH:mm -->
            <input asp-for="AppointmentTime" class="form-control" type="time" step="60" />
            <span asp-validation-for="AppointmentTime" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="PatientPhoneNumber" class="form-label"></label>
            <input asp-for="PatientPhoneNumber" class="form-control" />
            <span asp-validation-for="PatientPhoneNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="ManipulationTypeId" class="form-label"></label>
        <select asp-for="ManipulationTypeId" 
                asp-items="Model.ManipulationTypes.Select(x => new SelectListItem
                {
                    Value = x.Id.ToString(),
                    Text = x.Name
                })" class="form-select">
            <option value="">-- select manipulation --</option>
        </select>
        <span asp-validation-for="ManipulationTypeId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Note" class="form-label"></label>
        <textarea asp-for="Note" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
