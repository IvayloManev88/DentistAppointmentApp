@using DentistApp.ViewModels.AppointmentViewModels
@model AppointmentViewAppointmentViewModel[]

@{
    ViewData["Title"] = "Appointments";
    ViewData["UsePaper"] = true;
    string currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value!;
    bool isDentist = User.IsInRole("Dentist");
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Appointments</h2>

        <a asp-action="Create" class="btn btn-primary">
            Create new
        </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No appointments found.
    </div>
}
else
{
    <div class="paper-table-wrapper">
        <table class="table table-bordered align-middle paper-table">
            <thead>
                <tr>
                    <th>Patient</th>
                    <th>Phone</th>
                    <th>Dentist</th>
                    <th>Date & Time</th>
                    <th>Manipulation</th>
                    <th>Note</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    bool canModify =
                    isDentist || appointment.AppointmentUserCreated == currentUserId;

                    <tr>
                        <td>@appointment.PatientAppointmentName</td>
                        <td>@appointment.PatientAppointmentPhoneNumber</td>
                        <td>@appointment.DentistAppointmentName</td>
                        <td>@appointment.AppointmentDate</td>
                        <td>@appointment.ManipulationName</td>
                        <td>
                            @if (string.IsNullOrWhiteSpace(appointment.AppointmentNote))
                            {
                                <span class="text-muted">—</span>
                            }
                            else
                            {
                                @appointment.AppointmentNote
                            }
                        </td>

                        <td class="text-end">
                            @if (canModify)
                            {
                                <a class="btn btn-sm btn-outline-primary"
                                   asp-action="Edit"
                                   asp-route-id="@appointment.AppointmentId">
                                    Edit
                                </a>

                                <form asp-action="Delete"
                                      asp-route-id="@appointment.AppointmentId"
                                      method="post"
                                      class="d-inline">
                                    <button type="submit"
                                            class="btn btn-sm btn-outline-danger ms-2"
                                            onclick="return confirm('Delete this appointment?');">
                                        Delete
                                    </button>
                                </form>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
