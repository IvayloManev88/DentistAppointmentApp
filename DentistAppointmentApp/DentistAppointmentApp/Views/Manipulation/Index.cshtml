@using DentistApp.ViewModels.ManipulationViewModels
@model IEnumerable<ManipulationViewAllViewModel>

@{
    ViewData["Title"] = "Manipulations";
    ViewData["UsePaper"] = true;

    bool isDentist = User.IsInRole("Dentist");
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Manipulations</h2>

    @if (isDentist)
    {
        <a asp-action="Create" class="btn btn-primary">
            Create new
        </a>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No manipulations found.
    </div>
}
else
{
    <div class="paper-table-wrapper">
        <table class="table table-bordered align-middle paper-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price Range</th>
                    @if (isDentist)
                    {
                        <th class="text-end">Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.Name</td>
                        <td>@m.PriceRange</td>

                        @if (isDentist)
                        {
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary"
                                   asp-action="Edit"
                                   asp-route-id="@m.ManipulationId">
                                    Edit
                                </a>

                                <form asp-action="Delete"
                                      asp-route-id="@m.ManipulationId"
                                      method="post"
                                      class="d-inline">
                                    <button type="submit"
                                            class="btn btn-sm btn-outline-danger ms-2"
                                            onclick="return confirm('Delete this manipulation?');">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
