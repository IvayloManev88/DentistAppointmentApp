@using DentistApp.ViewModels.ManipulationViewModels
@model ManipulationCreateViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-5">

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-white border-0 pt-4 px-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h3 class="mb-1 fw-semibold">Create Manipulation</h3>
                            <p class="text-muted mb-0">Add a new manipulation type for appointments.</p>
                        </div>

                        <span class="badge rounded-pill bg-brand-subtle text-brand px-3 py-2">
                            Admin
                        </span>
                    </div>
                </div>

                <div class="card-body px-4 pb-4">
                    <form asp-action="Create" method="post" novalidate>
                        

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-medium"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0">🦷</span>
                                <input asp-for="Name"
                                       class="form-control"
                                       placeholder="e.g. Dental cleaning" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PriceRange" class="form-label fw-medium"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0">EUR</span>
                                <input asp-for="PriceRange"
                                       class="form-control"
                                       placeholder="e.g. 50-100" />
                            </div>
                            <div class="form-text">Format: <span class="fw-semibold">min-max</span> (example: 50-100)</div>
                            <span asp-validation-for="PriceRange" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-brand btn-lg rounded-3">
                                Create
                            </button>
                            <a asp-action="Index" class="btn btn-outline-brand rounded-3">
                                Back to list
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <p class="text-center text-muted small mt-3 mb-0">
                
            </p>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
