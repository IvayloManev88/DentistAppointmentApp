@using DentistApp.Web.ViewModels.ProcedureViewModels
@model ProcedureViewViewModel[]

@{
    ViewData["Title"] = "Procedures";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Appointments</h2>

    <a asp-action="Create" class="btn btn-primary">
        Create new
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No Procedures found.
    </div>
}
else
{
    <table class="table table-bordered table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>Patient</th>
                <th>Phone</th>
                <th>Dentist</th>
                <th>Date</th>
                <th>Manipulation</th>
                <th>Note</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var procedure in Model)
            {
                <tr>
                    <td>@procedure.PatientProcedureName</td>
                    <td>@procedure.PatientProcedurePhoneNumber</td>
                    <td>@procedure.DentistProcedureName</td>
                    <td>@procedure.ProcedureDate</td>
                    <td>@procedure.ManipulationName</td>
                    <td>
                        @if (string.IsNullOrWhiteSpace(procedure.ProcedureDentistNote))
                        {
                            <span class="text-muted">—</span>
                        }
                        else
                        {
                            @procedure.ProcedureDentistNote
                        }
                    </td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary"
                           asp-action="Edit"
                           asp-route-id="@procedure.ProcedureId">
                            Edit
                        </a>

                        <form asp-action="Delete"
                              asp-route-id="@procedure.ProcedureId"
                              method="post"
                              class="d-inline">
                            <button type="submit"
                                    class="btn btn-sm btn-outline-danger ms-2"
                                    onclick="return confirm('Delete this appointment?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
